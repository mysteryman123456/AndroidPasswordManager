<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp"
android:gravity="center"
tools:context=".ui.activity.AddProductActivity">

<ImageView
    android:id="@+id/profileImage"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/baseline_password_24"
    android:padding="8dp"
    android:scaleType="fitCenter" />

<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Update Your Password"
    android:textSize="22sp"
    android:textStyle="bold"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp" />

<EditText
    android:id="@+id/updateProductName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:hint="Password Title"
    android:inputType="text"
    android:background="@drawable/edit_text_border"
    android:padding="15dp" />

<EditText
    android:id="@+id/updateProductPrice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:hint="Password"
    android:inputType="text"
    android:background="@drawable/edit_text_border"
    android:padding="15dp" />

<EditText
    android:id="@+id/updateProductDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:hint="Note"
    android:inputType="textMultiLine"
    android:minLines="3"
    android:background="@drawable/edit_text_border"
    android:padding="15dp" />

<Button
    android:id="@+id/updateButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="12dp"
    android:text="Update Password"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    app:cornerRadius="4dp" />
</LinearLayout>

